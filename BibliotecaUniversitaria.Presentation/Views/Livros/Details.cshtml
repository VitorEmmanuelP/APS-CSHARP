@model BibliotecaUniversitaria.Application.ViewModels.LivroViewModel

@{
    ViewData["Title"] = "Detalhes do Livro";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-book"></i> @ViewData["Title"]</h2>
    <div>
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
            <i class="fas fa-edit"></i> Editar
        </a>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Voltar
        </a>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Titulo</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">

                        <p><strong>Autor:</strong> @Model.AutorNome</p>
                        <p><strong>Categoria:</strong> @Model.CategoriaNome</p>
                        <p><strong>Editora:</strong> @(Model.Editora ?? "Não informada")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Ano de Publicação:</strong> @Model.AnoPublicacao</p>
                        <p><strong>Número de Páginas:</strong> @Model.NumeroPaginas</p>
                        <p><strong>Quantidade Total:</strong> @Model.QuantidadeTotal</p>
                        <p><strong>Quantidade Disponível:</strong>
                            <span class="badge @(Model.QuantidadeDisponivel > 0 ? "bg-success" : "bg-danger")">
                                @Model.QuantidadeDisponivel
                            </span>
                        </p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Sinopse))
                {
                    <hr>
                    <h5>Sinopse</h5>
                    <p>@Model.Sinopse</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-chart-bar"></i> Status</h5>
            </div>
            <div class="card-body">
                <div class="text-center">
                    @if (Model.QuantidadeDisponivel > 0)
                    {
                        <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                        <h5 class="text-success">Disponível</h5>
                        <p>Este livro está disponível para empréstimo.</p>
                    }
                    else
                    {
                        <i class="fas fa-times-circle fa-3x text-danger mb-3"></i>
                        <h5 class="text-danger">Indisponível</h5>
                        <p>Todos os exemplares estão emprestados.</p>
                    }
                </div>
            </div>
        </div>

        <div class="card mt-3">
            <div class="card-header">
                <h5><i class="fas fa-cogs"></i> Ações</h5>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Editar Livro
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Excluir Livro
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
