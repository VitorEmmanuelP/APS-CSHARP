@model BibliotecaUniversitaria.Application.ViewModels.LivroViewModel

@{
    ViewData["Title"] = "Excluir Livro";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2><i class="fas fa-trash text-danger"></i> @ViewData["Title"]</h2>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Voltar
    </a>
</div>

<div class="alert alert-warning">
    <i class="fas fa-exclamation-triangle"></i>
    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir este livro?
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>@Model.Titulo</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">

                        <p><strong>Autor:</strong> @Model.AutorNome</p>
                        <p><strong>Categoria:</strong> @Model.CategoriaNome</p>
                        <p><strong>Editora:</strong> @(Model.Editora ?? "Não informada")</p>
                    </div>
                    <div class="col-md-6">
                        <p><strong>Ano de Publicação:</strong> @Model.AnoPublicacao</p>
                        <p><strong>Número de Páginas:</strong> @Model.NumeroPaginas</p>
                        <p><strong>Quantidade Total:</strong> @Model.QuantidadeTotal</p>
                        <p><strong>Quantidade Disponível:</strong>
                            <span class="badge @(Model.QuantidadeDisponivel > 0 ? "bg-success" : "bg-danger")">
                                @Model.QuantidadeDisponivel
                            </span>
                        </p>
                    </div>
                </div>

                @if (!string.IsNullOrEmpty(Model.Sinopse))
                {
                    <hr>
                    <h5>Sinopse</h5>
                    <p>@Model.Sinopse</p>
                }
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="fas fa-exclamation-triangle text-warning"></i> Aviso</h5>
            </div>
            <div class="card-body">
                <p>Esta ação irá:</p>
                <ul>
                    <li>Excluir permanentemente o livro</li>
                    <li>Remover todos os dados associados</li>
                    <li>Não poderá ser desfeita</li>
                </ul>

                @if (Model.QuantidadeDisponivel < Model.QuantidadeTotal)
                {
                    <div class="alert alert-danger">
                        <i class="fas fa-ban"></i>
                        <strong>Não é possível excluir!</strong><br>
                        Este livro possui empréstimos ativos.
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<div class="d-flex gap-2 mt-4">
    @if (Model.QuantidadeDisponivel == Model.QuantidadeTotal)
    {
        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirmar Exclusão
            </button>
        </form>
    }
    <a asp-action="Index" class="btn btn-secondary">
        <i class="fas fa-times"></i> Cancelar
    </a>
</div>
