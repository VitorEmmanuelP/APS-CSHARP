@model IEnumerable<BibliotecaUniversitaria.Application.DTOs.EmprestimoDTO>

@{
    ViewData["Title"] = "Empréstimos";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-book-reader"></i> Gerenciar Empréstimos
                    </h3>
                    <div>
                        <a asp-action="Ativos" class="btn btn-success btn-sm me-2">
                            <i class="fas fa-check-circle"></i> Ativos
                        </a>
                        <a asp-action="Atrasados" class="btn btn-warning btn-sm me-2">
                            <i class="fas fa-exclamation-triangle"></i> Atrasados
                        </a>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Novo Empréstimo
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead class="table-dark">
                                    <tr>
                                        <th>ID</th>
                                        <th>Livro</th>
                                        <th>Quantidade</th>
                                        <th>Data Empréstimo</th>
                                        <th>Devolução Prevista</th>
                                        <th>Devolução Real</th>
                                        <th>Status</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.Id</td>
                                            <td>@item.LivroTitulo</td>
                                            <td>@item.QuantidadeEmprestada</td>
                                            <td>@item.DataEmprestimo.ToString("dd/MM/yyyy")</td>
                                            <td>@item.DataDevolucaoPrevista.ToString("dd/MM/yyyy")</td>
                                            <td>@(item.DataDevolucaoReal?.ToString("dd/MM/yyyy") ?? "-")</td>
                                            <td>
                                                @if (item.Status == "Ativo")
                                                {
                                                    <span class="badge bg-success">@item.Status</span>
                                                }
                                                else if (item.Status == "Devolvido")
                                                {
                                                    <span class="badge bg-info">@item.Status</span>
                                                }
                                                else if (item.Status == "Cancelado")
                                                {
                                                    <span class="badge bg-secondary">@item.Status</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">@item.Status</span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group" role="group">
                                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm" title="Detalhes">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    @if (item.Status == "Ativo")
                                                    {
                                                        <a asp-action="Devolver" asp-route-id="@item.Id" class="btn btn-success btn-sm" title="Devolver">
                                                            <i class="fas fa-undo"></i>
                                                        </a>
                                                        <a asp-action="Cancelar" asp-route-id="@item.Id" class="btn btn-warning btn-sm" title="Cancelar">
                                                            <i class="fas fa-times"></i>
                                                        </a>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-book-reader fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Nenhum empréstimo encontrado</h5>
                            <p class="text-muted">Comece criando um novo empréstimo.</p>
                            <a asp-action="Create" class="btn btn-primary">
                                <i class="fas fa-plus"></i> Novo Empréstimo
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
