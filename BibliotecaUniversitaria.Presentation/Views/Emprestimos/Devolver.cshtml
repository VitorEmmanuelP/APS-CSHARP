@model BibliotecaUniversitaria.Application.DTOs.EmprestimoDevolucaoDTO

@{
    ViewData["Title"] = "Devolver Livro";
    var emprestimo = ViewBag.Emprestimo as BibliotecaUniversitaria.Application.DTOs.EmprestimoDTO;
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title mb-0">
                        <i class="fas fa-undo"></i> Devolver Livro
                    </h4>
                </div>
                <div class="card-body">
                    @if (emprestimo != null)
                    {
                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle"></i> Informações do Empréstimo</h6>
                            <p><strong>Livro:</strong> @emprestimo.LivroTitulo</p>
                            <p><strong>Quantidade:</strong> @emprestimo.QuantidadeEmprestada</p>
                            <p><strong>Data de Empréstimo:</strong> @emprestimo.DataEmprestimo.ToString("dd/MM/yyyy")</p>
                            <p><strong>Devolução Prevista:</strong> @emprestimo.DataDevolucaoPrevista.ToString("dd/MM/yyyy")</p>
                        </div>
                    }

                    <form asp-action="Devolver" asp-route-id="@emprestimo?.Id">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="DataDevolucaoReal" class="form-label">Data de Devolução</label>
                                    <input asp-for="DataDevolucaoReal" class="form-control" type="datetime-local" />
                                    <span asp-validation-for="DataDevolucaoReal" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12">
                                <div class="mb-3">
                                    <label asp-for="Observacoes" class="form-label">Observações</label>
                                    <textarea asp-for="Observacoes" class="form-control" rows="3" placeholder="Observações sobre a devolução (opcional)"></textarea>
                                    <span asp-validation-for="Observacoes" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-12">
                                <div class="d-flex justify-content-between">
                                    <a asp-action="Details" asp-route-id="@emprestimo?.Id" class="btn btn-secondary">
                                        <i class="fas fa-arrow-left"></i> Voltar
                                    </a>
                                    <button type="submit" class="btn btn-success">
                                        <i class="fas fa-check"></i> Confirmar Devolução
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-info-circle"></i> Informações</h5>
                </div>
                <div class="card-body">
                    <p><strong>Data de Devolução:</strong> Data e hora em que o livro foi devolvido.</p>
                    <p><strong>Observações:</strong> Informações sobre o estado do livro ou outras observações.</p>
                    <p><strong>Status:</strong> Após a devolução, o empréstimo será marcado como "Devolvido".</p>
                    <p><strong>Disponibilidade:</strong> O livro ficará disponível para novos empréstimos.</p>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const agora = new Date();
            const dataHora = agora.toISOString().slice(0, 16);
            document.querySelector('input[name="DataDevolucaoReal"]').value = dataHora;
        });
    </script>
}
