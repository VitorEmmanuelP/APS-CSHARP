@model BibliotecaUniversitaria.Application.DTOs.AutorDTO

@{
    ViewData["Title"] = "Excluir Autor";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle me-2"></i>Confirmar Exclusão
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Atenção!</strong> Esta ação não pode ser desfeita. Tem certeza que deseja excluir este autor?
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <h4 class="text-danger mb-4">@Model.Nome</h4>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-flag me-2"></i>Nacionalidade
                                    </h6>
                                    <p class="card-text">
                                        @(string.IsNullOrEmpty(Model.Nacionalidade) ? "Não informado" : Model.Nacionalidade)
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-calendar me-2"></i>Data de Nascimento
                                    </h6>
                                    <p class="card-text">
                                        @(Model.DataNascimento?.ToString("dd/MM/yyyy") ?? "Não informado")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Biografia))
                    {
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-muted">
                                            <i class="fas fa-book-open me-2"></i>Biografia
                                        </h6>
                                        <p class="card-text">@Model.Biografia</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>ID do Autor:</strong> @Model.Id
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Cancelar
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash me-1"></i>Confirmar Exclusão
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
