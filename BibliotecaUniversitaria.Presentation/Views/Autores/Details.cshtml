@model BibliotecaUniversitaria.Application.DTOs.AutorDTO

@{
    ViewData["Title"] = "Detalhes do Autor";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-user me-2"></i>Detalhes do Autor
                    </h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-4">
                                <h4 class="text-primary">@Model.Nome</h4>
                                <hr />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-flag me-2"></i>Nacionalidade
                                    </h6>
                                    <p class="card-text">
                                        @(string.IsNullOrEmpty(Model.Nacionalidade) ? "Não informado" : Model.Nacionalidade)
                                    </p>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-calendar me-2"></i>Data de Nascimento
                                    </h6>
                                    <p class="card-text">
                                        @(Model.DataNascimento?.ToString("dd/MM/yyyy") ?? "Não informado")
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.Biografia))
                    {
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <div class="card bg-light">
                                    <div class="card-body">
                                        <h6 class="card-title text-muted">
                                            <i class="fas fa-book-open me-2"></i>Biografia
                                        </h6>
                                        <p class="card-text">@Model.Biografia</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>ID do Autor:</strong> @Model.Id
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
