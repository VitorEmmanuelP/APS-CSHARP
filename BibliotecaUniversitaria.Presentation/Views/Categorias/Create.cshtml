@model BibliotecaUniversitaria.Application.DTOs.CategoriaCreateDTO

@{
    ViewData["Title"] = "Nova Categoria";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tag me-2"></i>Nova Categoria
                    </h3>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Nome" class="form-label">
                                    <i class="fas fa-tag me-1"></i>Nome da Categoria <span class="text-danger">*</span>
                                </label>
                                <input asp-for="Nome" class="form-control" placeholder="Ex: Ficção, Romance, Técnico, etc." />
                                <span asp-validation-for="Nome" class="text-danger"></span>
                                <div class="form-text">Máximo de 100 caracteres</div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="Descricao" class="form-label">
                                    <i class="fas fa-align-left me-1"></i>Descrição
                                </label>
                                <textarea asp-for="Descricao" class="form-control" rows="4" placeholder="Descreva brevemente esta categoria..."></textarea>
                                <span asp-validation-for="Descricao" class="text-danger"></span>
                                <div class="form-text">Máximo de 500 caracteres</div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Voltar
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save me-1"></i>Salvar Categoria
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
