@model BibliotecaUniversitaria.Application.DTOs.CategoriaDTO

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-tag me-2"></i>Detalhes da Categoria
                    </h3>
                    <div>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-2">
                            <i class="fas fa-edit me-1"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-1"></i>Voltar
                        </a>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="mb-4">
                                <h4 class="text-primary">@Model.Nome</h4>
                                <hr />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12 mb-3">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title text-muted">
                                        <i class="fas fa-align-left me-2"></i>Descrição
                                    </h6>
                                    <p class="card-text">
                                        @if (!string.IsNullOrEmpty(Model.Descricao))
                                        {
                                            @Model.Descricao
                                        }
                                        else
                                        {
                                            <span class="text-muted">Sem descrição</span>
                                        }
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="alert alert-info">
                                <i class="fas fa-info-circle me-2"></i>
                                <strong>ID da Categoria:</strong> @Model.Id
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
